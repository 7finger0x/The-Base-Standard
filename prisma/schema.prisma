generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String          @id @default(uuid())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  username       String?         @unique
  avatarUrl      String?
  bio            String?
  displayName    String?
  score          Float           @default(0)
  rank           Int             @default(0)
  tier           String          @default("TOURIST")
  lastUpdated    DateTime        @default(now())
  address        String?         @unique
  accounts       Account[]
  activityLogs   ActivityLog[]
  reputationLogs ReputationLog[]
  sessions       Session[]
  wallets        Wallet[]

  @@index([score])
  @@index([rank])
  @@index([tier])
  @@index([username])
}

model Wallet {
  id                 String   @id @default(uuid())
  address            String
  chainType          String   @default("EVM")
  label              String?
  verifiedAt         DateTime @default(now())
  verificationMethod String   @default("EIP712")
  isPrimary          Boolean  @default(false)
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([address, chainType])
  @@index([address])
  @@index([userId])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String  @default("oauth")
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  providerUsername  String?
  providerAvatar    String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@index([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sessionToken])
  @@index([userId])
}

model SiweNonce {
  id        String   @id @default(uuid())
  nonce     String   @unique
  userId    String?
  address   String?
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([nonce])
  @@index([userId])
  @@index([address])
}

model ReputationLog {
  id         String   @id @default(uuid())
  userId     String
  category   String
  points     Float
  multiplier Float    @default(1.0)
  timestamp  DateTime @default(now())
  metadata   String?
  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([category])
  @@index([timestamp])
}

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String
  type      String
  contract  String?
  tokenId   String?
  amount    Float?
  timestamp DateTime @default(now())
  metadata  String?
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([type])
  @@index([timestamp])
}

model LeaderboardSnapshot {
  id         String   @id @default(uuid())
  timestamp  DateTime @default(now())
  topUsers   String
  totalUsers Int

  @@index([timestamp])
}
