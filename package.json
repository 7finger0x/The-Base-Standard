{
  "name": "baserank-protocol",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "dev:indexer": "cd apps/indexer && pnpm dev",
    "dev:agent": "cd apps/agent && python main.py",
    "foundry:build": "cd foundry && forge build",
    "foundry:test": "cd foundry && forge test -vvv",
    "foundry:deploy": "cd foundry && forge script script/Deploy.s.sol --broadcast --verify"
  },
  "dependencies": {
    "@coinbase/onchainkit": "^0.36.0",
    "@farcaster/frame-sdk": "^0.1.0",
    "@tanstack/react-query": "^5.60.0",
    "clsx": "^2.1.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.5.0",
    "viem": "^2.21.0",
    "wagmi": "^2.14.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
