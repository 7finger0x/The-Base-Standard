{
  "name": "the-base-standard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:all": "npm run test:frontend && npm run test:indexer && npm run test:agent && npm run foundry:test",
    "test:frontend": "vitest run",
    "test:indexer": "cd apps/indexer && vitest run",
    "test:agent": "cd apps/agent && pytest",
    "test:agent:coverage": "cd apps/agent && pytest --cov",
    "dev:indexer": "cd apps/indexer && pnpm dev",
    "dev:agent": "cd apps/agent && python main.py",
    "foundry:build": "cd foundry && forge build",
    "foundry:test": "cd foundry && forge test -vvv",
    "foundry:deploy": "cd foundry && forge script script/Deploy.s.sol --broadcast --verify",
    "pre-deploy": "bash scripts/pre-deploy.sh",
    "pre-deploy:win": "scripts\\pre-deploy.bat",
    "db:setup": "bash scripts/setup-production-db.sh",
    "contract:deploy": "bash scripts/deploy-contract.sh",
    "env:verify": "bash scripts/verify-env.sh",
    "test:scripts": "bash scripts/test-scripts.sh",
    "test:endpoints": "bash scripts/test-endpoints.sh",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate"
  },
  "dependencies": {
    "@amplitude/unified": "^1.0.0-beta.9",
    "@auth/prisma-adapter": "^2.11.1",
    "@coinbase/onchainkit": "^0.36.11",
    "@farcaster/frame-sdk": "^0.1.0",
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/adapter-neon": "^7.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@statsig/react-bindings": "^3.31.1",
    "@statsig/session-replay": "^3.31.1",
    "@statsig/web-analytics": "^3.31.1",
    "@tanstack/react-query": "^5.90.16",
    "@vercel/speed-insights": "^1.3.1",
    "better-sqlite3": "^12.6.0",
    "clsx": "^2.1.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.562.0",
    "next": "^15.0.0",
    "next-auth": "^5.0.0-beta.30",
    "pg": "^8.17.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.5.0",
    "viem": "^2.44.1",
    "wagmi": "^2.19.5",
    "ws": "^8.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@prisma/client": "^7.2.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.0",
    "prisma": "^7.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
